generator client {
  provider   = "prisma-client"
  output     = "../generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

// ============================================================================
// ACCOUNT TYPES
// ============================================================================

enum AccountType {
  USER // Solo expenses tracking
  DEVELOPER // Solo OAuth client creation
  HYBRID // Ambas features habilitadas
}

// ============================================================================
// USER MANAGEMENT
// ============================================================================

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  username           String?   @unique
  passwordHash       String
  fullName           String?
  roles              String[] // ['user', 'admin']
  isActive           Boolean   @default(true)
  emailVerified      Boolean   @default(false)
  isDeveloper        Boolean   @default(false)
  canUseExpenses     Boolean   @default(true)
  developerEnabledAt DateTime?
  expensesEnabledAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions           Session[]
  authorizationCodes AuthorizationCode[]
  userConsents       UserConsent[]
  oauthClients       OAuthClient[]       @relation("OAuthClientOwner")

  @@index([email])
  @@index([username])
  @@index([isDeveloper]) // ✅ Index para queries
  @@index([canUseExpenses]) // ✅ Index para queries
  @@map("users")
}

// ============================================================================
// SESSION MANAGEMENT
// ============================================================================

model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  userAgent String?
  ipAddress String?
  metadata  Json? // Flexible JSON for additional session data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt]) // For cleanup queries
  @@map("sessions")
}

// ============================================================================
// OAUTH2 CLIENT MANAGEMENT
// ============================================================================

model OAuthClient {
  id           String   @id @default(cuid())
  clientId     String   @unique
  clientSecret String // Hashed in application layer
  clientName   String
  redirectUris String[] // Array of allowed redirect URIs
  grantTypes   String[] // ['authorization_code', 'refresh_token']
  isPublic     Boolean  @default(false) // PKCE required if true
  isActive     Boolean  @default(true) // For soft delete

  clientSecretOld String?   @map("client_secret_old") // Previous secret (hashed)
  secretExpiresAt DateTime? @map("secret_expires_at") // When old secret expires

  // System Client Support (F2)
  isSystemClient Boolean @default(false) @map("is_system_client") // Marks system-owned clients
  systemRole     String? @map("system_role") // System role: 'bff', 'admin', etc.

  userId String? // Owner of this OAuth client (null for system clients)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  authorizationCodes AuthorizationCode[]
  userConsents       UserConsent[]

  owner User? @relation("OAuthClientOwner", fields: [userId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([userId])
  @@index([systemRole], map: "oauth_clients_system_role_idx")
  @@map("oauth_clients")
}

// ============================================================================
// AUTHORIZATION CODE FLOW
// ============================================================================

model AuthorizationCode {
  id                  String    @id @default(cuid())
  code                String    @unique
  userId              String
  clientId            String
  redirectUri         String
  codeChallenge       String // PKCE code challenge
  codeChallengeMethod String // 'S256' or 'plain'
  scope               String? // Requested scopes (space-separated)
  state               String? // OAuth2 state parameter
  expiresAt           DateTime
  used                Boolean   @default(false)
  usedAt              DateTime?
  createdAt           DateTime  @default(now())

  // Relations
  user   User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  client OAuthClient @relation(fields: [clientId], references: [clientId], onDelete: Cascade)

  @@index([code])
  @@index([userId])
  @@index([clientId])
  @@index([expiresAt]) // For cleanup queries
  @@map("authorization_codes")
}

// ============================================================================
// USER CONSENT MANAGEMENT
// ============================================================================

model UserConsent {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  clientId  String    @map("client_id")
  scopes    String[]  @db.VarChar(50)
  grantedAt DateTime  @default(now()) @map("granted_at")
  expiresAt DateTime? @map("expires_at")
  revokedAt DateTime? @map("revoked_at")

  user   User        @relation(fields: [userId], references: [id])
  client OAuthClient @relation(fields: [clientId], references: [clientId])

  @@index([userId])
  @@index([clientId])
  @@index([revokedAt])
  @@map("user_consents")
}

// ============================================================================
// SCOPE DEFINITIONS
// ============================================================================

model ScopeDefinition {
  id          String   @id @default(cuid())
  name        String   @unique // 'read', 'write', 'admin'
  description String // Human-readable description
  isDefault   Boolean  @default(false) // Auto-granted on first consent
  createdAt   DateTime @default(now())

  @@index([name])
  @@map("scope_definitions")
}
